{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.core",
      "es2015.collection",
      "es2015.symbol",
      "es2015.iterable",
      "es2015.promise",
      "es2016.array.include"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "preserveConstEnums": true,
    "strict": true,
    "target": "es6",
    "typeRoots": ["./node_modules/@types", "types"]
  },
  "include": [
    "src/@atlaskit/page-layout/**/*",
    "src/@atlaskit/sidebar/**/*"
  ]
}
